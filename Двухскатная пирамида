def printer(pyramid_height):
    output = []
    for n in range(1, pyramid_height + 1):
        row = []
        for x in range(1, n + 1):
            row.append(str(x))
        output.append(" ".join(row))
    print("\n".join(output))
    output = []
    for n in range(pyramid_height -1, 0, -1):
        row = []
        for x in range(1, n + 1):
            row.append(str(x))
        output.append(" ".join(row))
    print("\n".join(output))
printer(10)
